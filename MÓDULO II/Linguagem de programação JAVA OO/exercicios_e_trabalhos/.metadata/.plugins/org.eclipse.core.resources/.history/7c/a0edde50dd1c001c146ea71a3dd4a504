package Aula20Set;

public class contaCorrente {

	double quantia, saldo, limite;
	int numero;
	boolean contaEspecial = false;
	
	
	public double Sacar() {
		if (this.quantia>this.saldo) {
			System.out.println("Saldo insuficiente!");
			contaEspecial = true;
		}
		else this.saldo -= this.quantia;
		return this.saldo;
		
	}
	public double Depositar() {
		return this.saldo += quantia;
		
	}
	
	public void VerificarLimite() {
		if (contaEspecial) this.saldo = this.limite;
			
	}
	
	
}
